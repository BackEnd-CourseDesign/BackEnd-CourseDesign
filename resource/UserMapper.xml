<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.course.store.dao.UserMapper">
    <select id="selectUser" resultType="com.course.store.domain.User">
        select * from user
    </select>

    <insert id="insert" parameterType="com.course.store.domain.User">
        INSERT INTO user (uid,username,password,name,email) VALUES (#{uid},#{username},#{password},#{name},#{email})
    </insert>

    <delete id="delete" parameterType="int">
        DELETE FROM user WHERE uid = #{id};
    </delete>
</mapper>
